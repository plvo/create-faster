{
  "name": "create-faster-repository",
  "description": "A quick way to create a new project",
  "version": "0.0.0",
  "author": "plvo <plvdev@proton.me>",
  "license": "MIT",
  "private": false,
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.23",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check": "biome check --write .",
    "check:unused": "knip",
    "clean": "rimraf  \"**/.turbo\" \"**/node_modules\" \"**/.next\" \"**/bun.lock\" \"**/package-lock.json\" \"**/pnpm-lock.yaml\" \"**/dist\" \"**/generated\"",
    "format": "biome format --write .",
    "lint": "biome lint --write .",
    "build": "turbo run build",
    "build:cli": "turbo run build --filter=create-faster",
    "build:www": "turbo run build --filter=create-faster-www",
    "dev": "turbo run dev",
    "dev:cli": "turbo run dev --filter=create-faster",
    "dev:www": "turbo run dev --filter=create-faster-www",
    "start": "turbo run start",
    "start:cli": "turbo run start --filter=create-faster",
    "start:www": "turbo run start --filter=create-faster-www",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@repo/config": "*",
    "husky": "^9.1.7",
    "knip": "^5.77.1",
    "rimraf": "^6.1.2",
    "turbo": "^2.7.2",
    "typescript": "5.9.3",
    "@tailwindcss/postcss": "^4.1.18",
    "tailwindcss": "^4.1.18"
  }
}
