{
  "name": "create-faster",
  "description": "A quick way to create a new project",
  "version": "1.4.0",
  "license": "MIT",
  "author": "plvo <plvdev@proton.me>",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/plvo/create-faster.git",
    "directory": "apps/cli"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "homepage": "https://github.com/plvo/create-faster",
  "bugs": {
    "url": "https://github.com/plvo/create-faster/issues"
  },
  "keywords": [
    "cli",
    "nextjs",
    "turborepo",
    "starter",
    "boilerplate",
    "templates",
    "react",
    "typescript"
  ],
  "type": "module",
  "module": "src/index.ts",
  "engines": {
    "bun": ">=1.3.1"
  },
  "bin": {
    "create-faster": "./dist/index.js"
  },
  "files": [
    "dist",
    "templates",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm --production --banner '#!/usr/bin/env node' && chmod +x dist/index.js",
    "dev": "NODE_ENV=development bun run src/index.ts",
    "dev:watch": "NODE_ENV=development bun run src/index.ts --watch",
    "prepublishOnly": "bun run build",
    "publish:test:verdaccio": "bun publish --registry http://localhost:4873",
    "publish:test:start": "bun run build && bun pm pack && sleep 1 && $(which npx) file:$(pwd)/create-faster-$(node -p \"require('./package.json').version\").tgz",
    "test": "bun test"
  },
  "dependencies": {
    "@clack/core": "^0.5.0",
    "@clack/prompts": "^0.11.0",
    "commander": "^14.0.2",
    "fast-glob": "^3.3.3",
    "handlebars": "^4.7.8",
    "is-unicode-supported": "^2.1.0",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@repo/config": "*",
    "verdaccio": "^6.2.4"
  }
}
