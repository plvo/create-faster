    },
    {
      title: 'Draft: Upcoming Features',
      content: 'This is a draft post about upcoming features...',
      published: 'false',
      authorId: bob.id,
    },
  ]);

  console.log(`âœ… Created ${3} posts`);
  console.log('ðŸŽ‰ Seeding completed!');
}

seed()
  .catch((error) => {
