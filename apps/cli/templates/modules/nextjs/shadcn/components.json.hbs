{{!-- @scope:app --}}
{
  "$schema": "https://ui.shadcn.com/schema.json",
  "style": "new-york",
  "rsc": true,
  "tsx": true,
  "tailwind": {
    "config": "",
	{{#if (eq repo "turborepo")}}
    "css": "@repo/ui/base.css",
	{{else}}
    "css": "src/styles/globals.css",
	{{/if}}
    "baseColor": "neutral",
    "cssVariables": true
  },
  "iconLibrary": "lucide",
  "aliases": {
    "components": "@/components",
    "hooks": "@/hooks",
    "lib": "@/lib",
	{{#if (eq repo "turborepo")}}
    "utils": "@repo/ui/lib/utils",
	{{else}}
    "utils": "src/lib/utils",
	{{/if}}
	{{#if (eq repo "turborepo")}}
    "ui": "@repo/ui"
	{{/if}}
  }
}