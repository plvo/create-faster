services:
  mysql:
    image: mysql:latest
    container_name: mysql-{{projectName}}
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: password
      MYSQL_DATABASE: mysql-{{projectName}}
      MYSQL_USER: mysql
      MYSQL_PASSWORD: password
    ports:
      - "3306:3306"
    volumes:
      - mysql-{{projectName}}-data:/var/lib/mysql
    networks:
      - mysql-{{projectName}}-network
    command: --max-connections=100 --default-authentication-plugin=mysql_native_password
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost", "-u", "root", "-ppassword"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 30s

volumes:
  mysql-{{projectName}}-data:
    driver: local

networks:
  mysql-{{projectName}}-network:
    name: mysql-{{projectName}}-network
    driver: bridge

