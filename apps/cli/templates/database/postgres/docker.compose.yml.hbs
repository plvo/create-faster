services:
  postgres:
    image: postgres:latest
    container_name: postgres-{{projectName}}
    restart: always
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: password
      POSTGRES_DB: postgres-{{projectName}}
    ports:
      - "5432:5432"
    volumes:
      - postgres-{{projectName}}-data:/var/lib/postgresql/data
    networks:
      - postgres-{{projectName}}-network
    command: postgres -c 'max_connections=100'
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres -d postgres-{{projectName}}"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 30s

volumes:
  postgres-{{projectName}}-data:
    driver: local

networks:
  postgres-{{projectName}}-network:
    name: postgres-{{projectName}}-network
    driver: bridge