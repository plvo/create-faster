services:
  postgres:
    image: postgres:latest
    container_name: postgres-faster
    restart: always
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: password
      POSTGRES_DB: postgres-faster
    ports:
      - "5432:5432"
    volumes:
      - postgres-faster-data:/var/lib/postgresql/data
    networks:
      - postgres-faster-network
    command: postgres -c 'max_connections=100'
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres -d postgres-faster"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 30s

volumes:
  postgres-faster-data:
    driver: local

networks:
  postgres-faster-network:
    name: postgres-faster-network
    driver: bridge