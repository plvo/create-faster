{
  "name": "{{appName}}",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    {{#if (eq repo "single")}}
    "check": "biome check --write .",
    "format": "biome format --write .",
    "lint": "biome lint --write .",
    "prepare": "husky",
    {{/if}}
    "dev": "next dev --turbopack {{#if (eq repo "turborepo")}}--port {{appPort appName}}{{/if}}",
    "build": "next build --turbo",
    "build:analyze": "ANALYZE=true next build --turbo",
    "start": "next start {{#if (eq repo "turborepo")}}--port {{appPort appName}}{{/if}}",
    "start:inspect": "NODE_OPTIONS=\"--inspect\" next start {{#if (eq repo "turborepo")}}--port {{appPort appName}}{{/if}}"
  },
  "dependencies": {
    {{#if (and (eq repo "single") (hasModule "shadcn"))}}
    "radix-ui": "^1.4.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "vaul": "^1.1.2",
    "tailwind-merge": "^3.3.1",
    {{/if}}
    "lucide-react": "^0.487.0",
    "next": "15.5.4",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tw-animate-css": "^1.3.4"
  },
  "devDependencies": {
    {{#if (eq repo "turborepo")}}
    "@repo/ui": "*",
    "@repo/config": "*",
    {{else}}
    "@tailwindcss/postcss": "^4.1.10",
    {{/if}}
    "@types/node": "^20",
    "@types/react": "~19.1.10",
    "@types/react-dom": "^19",
    "tailwindcss": "^4.1.10",
    "typescript": "^5"
  }
}
