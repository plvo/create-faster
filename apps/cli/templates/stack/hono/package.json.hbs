{
  "name": "{{appName}}",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "bun build src/index.ts --production --target node --format esm --outfile dist/index.js",
    "dev": "bun run --watch src/app.ts",
    "start": "bun run src/index.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@hono/zod-validator": "^0.7.0",
    {{#if (and (eq repo "turborepo") (hasContext "orm"))}}
    "@repo/db": "*",
    {{/if}}
    {{#if (eq repo "single")}}
    {{#if (eq orm "drizzle")}}
    "drizzle-orm": "^0.38.3",
    {{#if (eq database "postgres")}}
    "pg": "^8.13.1",
    {{/if}}
    {{#if (eq database "mysql")}}
    "mysql2": "^3.11.5",
    {{/if}}
    {{/if}}
    {{#if (eq orm "prisma")}}
    "@prisma/client": "^6.13.0",
    {{/if}}
    {{/if}}
    "hono": "^4.7.10"
  },
  "devDependencies": {
    {{#if (eq repo "turborepo")}}
    "@repo/config": "*",
    {{/if}}
    {{#if (eq repo "single")}}
    {{#if (has "extra" "biome")}}
    "@biomejs/biome": "^2.3.11",
    {{/if}}
    {{#if (has "extra" "husky")}}
    "husky": "^9.1.7",
    {{/if}}
    {{/if}}
    "typescript": "^5"
  }
}