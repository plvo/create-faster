{
  "name": "{{appName}}",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    {{#if (eq repo "single")}}
    {{#if (eq orm "drizzle")}}
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run scripts/seed.ts",
    {{/if}}
    {{#if (eq orm "prisma")}}
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "bun run scripts/seed.ts",
    {{/if}}
    "clean": "rimraf node_modules .next bun.lock package-lock.json pnpm-lock.yaml",
    {{#if (has "extra" "biome")}}
    "format": "biome format --write .",
    "lint": "biome lint",
    {{/if}}
    "unused": "knip",
    {{#if (has "extra" "husky")}}
    "prepare": "husky",
    {{/if}}
    {{/if}}
    "dev": "next dev{{#if (eq repo "turborepo")}} --port {{appPort appName}}{{/if}}",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build --turbo",
    "start": "next start{{#if (eq repo "turborepo")}} --port {{appPort appName}}{{/if}}",
    "start:inspect": "NODE_OPTIONS=\"--inspect\" next start{{#if (eq repo "turborepo")}} --port {{appPort appName}}{{/if}}"
  },
  "dependencies": {
    {{#if (has "module" "shadcn")}}
    {{#if (eq repo "single")}}
    "radix-ui": "^1.4.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "vaul": "^1.1.2",
    "tailwind-merge": "^3.3.1",
    {{else}}
    "@repo/ui": "*",
    {{/if}}
    {{/if}}
    {{#if (has "module" "react-hook-form")}}
    "react-hook-form": "^7.56.1",
    "@hookform/resolvers": "^5.2.1",
    {{/if}}
    {{#if (has "module" "tanstack-form")}}
    "@tanstack/react-form": "^1.23.7",
    {{/if}}
    {{#if (has "module" "better-auth")}}
    "better-auth": "^1.4.10",
    {{/if}}
    {{#if (has "module" "mdx")}}
    "@mdx-js/loader": "^3",
    "@mdx-js/react": "^3",
    "@next/mdx": "^16.1.1",
    "next-mdx-remote": "^5.0.0",
    {{/if}}
    {{#if (has "module" "tanstack-query")}}
    "@tanstack/react-query": "^5.90.0",
    {{/if}}
    {{#if (has "module" "next-themes")}}
    "next-themes": "^0.4.6",
    {{/if}}
    {{#if (and (eq repo "turborepo") (hasContext "orm"))}}
    "@repo/db": "*",
    {{/if}}
    {{#if (eq repo "single")}}
    {{#if (eq orm "drizzle")}}
    "drizzle-orm": "^0.38.3",
    {{#if (eq database "postgres")}}
    "pg": "^8.13.1",
    {{/if}}
    {{#if (eq database "mysql")}}
    "mysql2": "^3.11.5",
    {{/if}}
    {{/if}}
    {{#if (eq orm "prisma")}}
    "@prisma/client": "^6.13.0",
    {{/if}}
    {{/if}}
    "lucide-react": "^0.487.0",
    "next": "^16.1.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tw-animate-css": "^1.3.4"
  },
  "devDependencies": {
    {{#if (eq repo "turborepo")}}
    "@repo/config": "*",
    {{else}}
    "@tailwindcss/postcss": "^4.1.10",
    {{/if}}
    "@types/node": "^20",
    "@types/react": "^19.2.3",
    "@types/react-dom": "^19.2.3",
    {{#if (eq repo "single")}}
    {{#if (has "module" "mdx")}}
    "@types/mdx": "^2.0.13",
    {{/if}}
    {{#if (eq orm "drizzle")}}
    "drizzle-kit": "^0.30.1",
    {{#if (eq database "postgres")}}
    "@types/pg": "^8.11.10",
    {{/if}}
    {{#if (eq database "mysql")}}
    "@types/mysql2": "^3.11.5",
    {{/if}}
    {{/if}}
    {{#if (eq orm "prisma")}}
    "prisma": "^6.13.0",
    {{/if}}
    {{/if}}
    "tailwindcss": "^4.1.10",
    {{#if (eq repo "single")}}
    {{#if (has "extra" "biome")}}
    "@biomejs/biome": "^2.3.11",
    {{/if}}
    {{#if (has "extra" "husky")}}
    "husky": "^9",
    {{/if}}
    "knip": "^5",
    "rimraf": "^6",
    {{/if}}
    "@next/bundle-analyzer": "^16.1.1",
    {{#if (has "module" "tanstack-devtools")}}
    "@tanstack/react-devtools": "^0.7.0",
    "@tanstack/react-query-devtools": "^5.90.1",
    {{/if}}
    "typescript": "^5"
  }
}
