{
  "name": "{{appName}}",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    {{#if (eq repo "single")}}
    {{#if (eq orm "drizzle")}}
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run scripts/seed.ts",
    {{/if}}
    {{#if (eq orm "prisma")}}
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "bun run scripts/seed.ts",
    {{/if}}
    {{#if (eq linter "biome")}}
    "format": "biome format --write .",
    "lint": "biome lint",
    {{/if}}
    {{#if (eq linter "eslint")}}
    "format": "eslint --fix .",
    "lint": "eslint",
    {{/if}}
    {{#if (hasExtra "husky")}}
    "prepare": "husky",
    {{/if}}
    {{/if}}
    "dev": "vite dev{{#if (eq repo "turborepo")}} --port {{appPort appName}}{{else}} --port 3000{{/if}}",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run"
  },
  "dependencies": {
    {{#if (eq repo "turborepo")}}
    "@repo/config": "*",
    {{#if (hasContext "orm")}}
    "@repo/db": "*",
    {{/if}}
    {{/if}}
    {{#if (eq repo "single")}}
    {{#if (eq orm "drizzle")}}
    "drizzle-orm": "^0.38.3",
    {{#if (eq database "postgres")}}
    "pg": "^8.13.1",
    {{/if}}
    {{#if (eq database "mysql")}}
    "mysql2": "^3.11.5",
    {{/if}}
    {{/if}}
    {{#if (eq orm "prisma")}}
    "@prisma/client": "^6.13.0",
    {{/if}}
    {{/if}}
    "@tailwindcss/vite": "^4.0.6",
    "@tanstack/react-devtools": "^0.7.0",
    "@tanstack/react-router": "^1.132.0",
    "@tanstack/react-router-devtools": "^1.132.0",
    "@tanstack/react-router-ssr-query": "^1.131.7",
    "@tanstack/react-start": "^1.132.0",
    "@tanstack/router-plugin": "^1.132.0",
    "lucide-react": "^0.561.0",
    "nitro": "latest",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.0.6",
    "vite-tsconfig-paths": "^6.0.2"
  },
  "devDependencies": {
    {{#if (eq repo "turborepo")}}
    {{#if (eq linter "eslint")}}
    "@repo/eslint-config": "*",
    {{/if}}
    {{/if}}
    {{#if (eq repo "single")}}
    {{#if (eq orm "drizzle")}}
    "drizzle-kit": "^0.30.1",
    {{#if (eq database "postgres")}}
    "@types/pg": "^8.11.10",
    {{/if}}
    {{#if (eq database "mysql")}}
    "@types/mysql2": "^3.11.5",
    {{/if}}
    {{/if}}
    {{#if (eq orm "prisma")}}
    "prisma": "^6.13.0",
    {{/if}}
    {{/if}}
    {{#if (eq repo "single")}}
    {{#if (eq linter "biome")}}
    "@biomejs/biome": "^2.3.11",
    {{/if}}
    {{#if (eq linter "eslint")}}
    "eslint": "^9",
    "@eslint/js": "^9",
    "typescript-eslint": "^8",
    "eslint-plugin-react": "^7",
    "eslint-plugin-react-hooks": "^5",
    {{/if}}
    {{#if (hasExtra "husky")}}
    "husky": "^9.1.7",
    {{/if}}
    {{/if}}
    "@tanstack/devtools-vite": "^0.3.11",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22.10.2",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@vitejs/plugin-react": "^5.0.4",
    "jsdom": "^27.0.0",
    "typescript": "^5.7.2",
    "vite": "^7.1.7",
    "vitest": "^3.0.5",
    "web-vitals": "^5.1.0"
  }
}
