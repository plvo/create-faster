{
  "name": "{{projectName}}",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "bun@1.2.23",
  "engines": {
    "node": ">=22"
  },
  {{#if (eq orm "prisma")}}
    "prisma": {
      "schema": "packages/db/prisma/schema.prisma"
    },
  {{/if}}
  "scripts": {
    "clean": "rimraf  \"**/.turbo\" \"**/node_modules\" \"**/.next\" \"**/bun.lock\" \"**/package-lock.json\" \"**/pnpm-lock.yaml\" \"**/dist\" \"**/generated\" && bun run clean",
    "unused": "knip",
    {{#if (hasExtra "biome")}}
    "lint": "biome lint",
    "format": "biome format --write .",
    {{/if}}
    {{#if (hasExtra "husky")}}
    "prepare": "husky",
    {{/if}}
    {{#if (eq orm "drizzle")}}
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run scripts/seed.ts",
    {{/if}}
    {{#if (eq orm "prisma")}}
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "bun run scripts/seed.ts",
    {{/if}}
    {{#if (hasAnyStack "nextjs")}}
    "prebuild": "next telemetry disable",
    {{/if}}
    "build": "turbo run build",
    "dev": "turbo run dev",
    "start": "turbo run start"
  },
  "dependencies": {
    "lucide-react": "^0.544.0",
    {{#if (hasAnyStack "nextjs")}}
    "next": "^15.5",
    "next-themes": "^0.4.6",
    "react": "^19",
    "react-dom": "^19",
    {{/if}}
    "zod": "^4.1"
  },
  "devDependencies": {
    "@repo/config": "*",
    {{#if (hasAnyStack "nextjs")}}
    "@next/bundle-analyzer": "^15.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    {{/if}}
    {{#if (hasExtra "biome")}}
    "@biomejs/biome": "^2.3.11",
    {{/if}}
    {{#if (hasExtra "husky")}}
    "husky": "^9",
    {{/if}}
    "@types/node": "^24.5.2",
    "knip": "^5",
    "rimraf": "^6",
    "turbo": "^2.5.5",
    "typescript": "5.9.2"
  }
}