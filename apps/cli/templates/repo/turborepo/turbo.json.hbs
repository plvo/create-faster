{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "stream",
  "remoteCache": {
    "signature": true
  },
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "build:analyze": {
      "dependsOn": ["^build:analyze"],
      "inputs": ["$TURBO_DEFAULT$", ".env"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "dev": {
      "inputs": ["$TURBO_DEFAULT$", ".env"],
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    }{{#if (or (has "linter" "eslint") (has "linter" "eslint-prettier"))}},
    "lint": {}{{/if}}
  }
}
