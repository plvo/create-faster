.h1-mdx {
  @apply text-4xl font-bold scroll-m-20 whitespace-nowrap tracking-tighter;
}

.h2-mdx {
  @apply text-3xl pt-6 pb-4 font-bold scroll-m-20 whitespace-nowrap tracking-tighter;
}

.h3-mdx {
  @apply text-2xl pt-5 pb-3 font-bold scroll-m-20 whitespace-nowrap tracking-tighter;
}

.h4-mdx {
  @apply text-xl pt-4 pb-2 font-bold scroll-m-20 whitespace-nowrap tracking-tighter;
}

.p-mdx {
  @apply leading-relaxed text-justify mt-4;
}

.a-mdx {
  @apply underline underline-offset-4 hover:underline-offset-5 decoration-1;
}

.em-mdx {
  @apply font-medium;
}

.strong-mdx {
  @apply font-medium;
}

.ul-mdx {
  @apply ml-6 list-disc;
}

.ol-mdx {
  @apply ml-6 list-decimal;
}

.li-mdx {
  @apply [&:not(:first-child)]:mt-2;
}

.blockquote-mdx {
  @apply mt-6 border-l-2 pl-5 italic;
}

.hr-mdx {
  @apply my-4 md:my-8;
}

.small-mdx {
  @apply text-sm font-medium leading-none;
}

.code-mdx {
  @apply relative rounded bg-gray-100 dark:bg-gray-800 px-[0.3rem] py-[0.2rem] font-mono text-sm font-semibold;
}
